.search {
  position: absolute;
  top: 14rpx;
  left: 30rpx;
  right: 30rpx;
  height: 60rpx;
  background: #fff;
  opacity: 0.8;
  font-size: 26rpx;
  color: #777;
  border-radius: 30rpx;
  line-height: 60rpx;
  padding: 0 25rpx;
  z-index: 99;
}

.search .icon-search {
  font-size: 26rpx;
}
.nav {
  margin: 20rpx 0 0 0;
  overflow: hidden;
  padding-bottom: 10rpx;
  padding-left: 20rpx;
  border-bottom: 1px solid #eee;
}

.nav .li {
  float: left;
  text-align: center;
  width: 130rpx;
  height: 100rpx;
  border-radius: 8rpx;
  position: relative;
  padding: 0 20rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  background-size: 130rpx 100rpx;
}

.nav .li text {
  font-size: 26rpx;
  width: 130rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  color: #fff;
  font-family: PingFangSC-Medium;
}

