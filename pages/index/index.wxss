.clear {
  clear: both;
}
.icon-change{
  font-size: 26rpx;
  width:36rpx;
  height:36rpx;
  display:inline-block;
  padding:10rpx;
  vertical-align: middle;
  transition: all .5s ease-in;
  transform: rotate(0deg);
  transform-origin: center center;
}
.title{
  display:flex;
  justify-content: center;
  /* padding-left:20rpx;
