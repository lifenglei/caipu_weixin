
/* 个人中心样式 */
page{
    background:#f4f4f4;
  }
  .home-wrap{
    background: #2D6E7F;
    margin:auto;
    font-size:14px;
    color:#fff;
    padding: 60rpx 0;
  }
  .avatar{
      width:90rpx;
      height:90rpx;
      border-radius: 100%;
      vertical-align: middle!important;
  }

  .shou-quan{
      width:300rpx;
      height:72rpx;
      line-height: 72rpx;
      background:#3baf23;
      color:#fff;
      border-radius: 40rpx;
      text-align:center;
      font-size:24rpx;
  }
  .mr30{
    margin-top:30rpx;
  }
  .home-li{
    width:96%;
    color:#979797;
    font-size:28rpx;
    margin: 0 auto;
    margin-bottom:40rpx;
    margin-top:40rpx;
    position: relative;
  }
  .home-li .line:nth-child(2){
    border-top:1px solid #f4f4f4;
  }
  .home-help{
    width:100%;
    background:#fff;
    margin-top:30rpx;
  }
  .line{
    display:flex;
    justify-content: space-between;
    padding-right:30rpx;
    padding-left:30rpx;
    align-items:center;
    background:#fff; 
    color:#979797;
  }
  .help-icon{
    width:48rpx;
    height:48rpx;
    vertical-align: middle;
  }
  .link{
      height: 100rpx;
      padding-right: 15rpx;
      color: #FF506D;
      font-style: normal;
      background: url(https://img2.inke.cn/MTUwMTIzNDc2NTcxOCM0MDMjanBn.jpg) no-repeat right center;
      background-size: 22rpx auto;
  }
  
  .title-wrap{
    position:relative;
    top:30rpx;
    margin-bottom:20rpx;
  }
  .user-info{
      display:flex;
      padding-left:30rpx;
  }
 
  .version{
  text-align:center;
  position:absolute;
  left:0;
  right:0;
  bottom:68rpx;
  color:#979797;
  }
  .wechat{
      width:48rpx;
      height:48rpx;
      display: inline-block;
      vertical-align: middle;
      position: relative;
      left:10rpx;
  }
  .contact-btn {
    display: inline-block;
    position: absolute;
    width: 100%;
    top:0;
    background: salmon;
    height:100%;
    opacity: 0;
  }
  .pr10{
      position: relative;
      top:8rpx;
      left:20rpx;
  }
  .strip-w{
      width:100%;
  }



  .btn{

    text-align: center;
    
    margin-top: 300rpx;
    
    }
    
    .canvas-box{
    
    background: #999999;
    
    position: fixed;
    
    top: 0;
    
    }
    
    .btnSave{
    
    z-index: 11111;
    
    font-size: 26rpx;
    
    background: #564d60;
    
    color: #ffffff;
    
    width: 200rpx;
    
    height: 70rpx;
    
    line-height: 70rpx;
    
    border-radius: 10rpx;
    
    text-align: center;
    
    position: absolute;
    
    bottom: 5rpx;
    
    left: 50%;
    
    margin-left: -100rpx;
    
    }
  